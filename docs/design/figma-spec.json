            "comment": "카페 평점"
          },
          {
            "name": "latitude",
            "type": "DECIMAL(10,8)",
            "nullable": true,
            "comment": "위도"
          },
          {
            "name": "longitude",
            "type": "DECIMAL(11,8)",
            "nullable": true,
            "comment": "경도"
          },
          {
            "name": "created_at",
            "type": "TIMESTAMP",
            "default": "CURRENT_TIMESTAMP",
            "nullable": false
          },
          {
            "name": "updated_at",
            "type": "TIMESTAMP",
            "default": "CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP",
            "nullable": false
          }
        ],
        "indexes": [
          {
            "name": "idx_name",
            "columns": ["name"]
          },
          {
            "name": "idx_rating",
            "columns": ["rating"]
          },
          {
            "name": "idx_region",
            "columns": ["region"]
          },
          {
            "name": "idx_user_count",
            "columns": ["user_count"]
          }
        ]
      },
      {
