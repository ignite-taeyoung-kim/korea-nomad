  "api": {
    "baseUrl": "http://localhost:8080/api",
    "version": "v1",
    "endpoints": [
      {
        "id": "auth_login",
        "method": "POST",
        "path": "/auth/login",
        "description": "사용자 로그인",
        "tags": ["Auth"],
        "requestBody": {
          "type": "object",
          "properties": {
            "email": {
              "type": "string",
              "example": "user@example.com"
            },
            "password": {
              "type": "string",
              "example": "password123"
            }
          },
          "required": ["email", "password"]
        },
        "response": {
          "status": 200,
          "body": {
            "type": "object",
            "properties": {
              "id": { "type": "number" },
              "email": { "type": "string" },
              "name": { "type": "string" },
              "token": { "type": "string" },
              "avatar_url": { "type": "string" }
            }
          }
        }
      },
      {
        "id": "auth_signup",
        "method": "POST",
        "path": "/auth/signup",
        "description": "사용자 회원가입",
        "tags": ["Auth"],
        "requestBody": {
          "type": "object",
          "properties": {
            "email": { "type": "string" },
            "password": { "type": "string" },
            "name": { "type": "string" },
            "gender": { "type": "string", "enum": ["MALE", "FEMALE", "OTHER"] }
          },
          "required": ["email", "password", "name"]
        },
        "response": {
          "status": 201,
          "body": {
            "id": { "type": "number" },
            "email": { "type": "string" },
            "name": { "type": "string" }
          }
        }
      }
    ]
  },
