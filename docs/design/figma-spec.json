{
  "project": {
    "name": "Korea Nomad",
    "description": "한국 노마드 여행 정보 플랫폼",
    "version": "2.0",
    "createdAt": "2025-11-18",
    "status": "complete",
    "stack": {
      "frontend": "React 19 + TypeScript + Tailwind CSS",
      "backend": "Spring Boot 3 + Java 17",
      "database": "MySQL 8",
      "migration": "Flyway",
      "stateManagement": "Zustand + React Query"
    }
  },
  "database": {
    "tables": [
      {
        "id": "user",
        "name": "user",
        "description": "사용자 정보",
        "columns": [
          {
            "name": "id",
            "type": "BIGINT",
            "primaryKey": true,
            "autoIncrement": true,
            "nullable": false,
            "comment": "사용자 ID"
          },
          {
            "name": "email",
            "type": "VARCHAR(255)",
            "nullable": false,
            "unique": true,
            "comment": "이메일"
          },
          {
            "name": "password",
            "type": "VARCHAR(255)",
            "nullable": false,
            "comment": "해시된 비밀번호"
          },
          {
            "name": "name",
            "type": "VARCHAR(100)",
            "nullable": false,
            "comment": "이름"
          },
          {
            "name": "gender",
            "type": "ENUM('MALE', 'FEMALE', 'OTHER')",
            "nullable": true,
            "comment": "성별"
          },
          {
            "name": "bio",
            "type": "TEXT",
            "nullable": true,
            "comment": "자기소개"
          },
          {
            "name": "avatar_url",
            "type": "VARCHAR(500)",
            "nullable": true,
            "comment": "프로필 이미지 URL"
          },
          {
            "name": "created_at",
            "type": "TIMESTAMP",
            "default": "CURRENT_TIMESTAMP",
            "nullable": false,
            "comment": "가입일시"
          },
          {
            "name": "updated_at",
            "type": "TIMESTAMP",
            "default": "CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP",
            "nullable": false,
            "comment": "수정일시"
          }
        ],
        "indexes": [
          {
            "name": "idx_email",
            "columns": ["email"],
            "unique": true
          }
        ]
      },
      {
        "id": "city",
        "name": "city",
        "description": "도시 정보",
        "columns": [
          {
            "name": "id",
            "type": "BIGINT",
            "primaryKey": true,
            "autoIncrement": true,
            "nullable": false,
            "comment": "도시 ID"
          },
          {
            "name": "name",
